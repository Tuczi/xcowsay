<?xml version="1.0" encoding="ISO-8859-1"?>

<screensaver name="xcowsay" _label="Xcowsay" gl="no">

  <number id="delay" type="spinbutton" arg="-d %"
          _label="Delay in seconds"
          low="1" high="100" default="6"/>

  <string id="cmd" arg="-c %"
          _label="Command to execute"/>

  <string id="cmd" arg="-f %"
          _label="Font"
          default="-*-fixed-*-r-*-*-14-*-*-*-*-*-*-*"/>

  <xscreensaver-updater />

  <_description>
Displays text
Written by Tomasz Kuczma; 2016
https://github.com/Tuczi/xcowsay
  </_description>
</screensaver>
